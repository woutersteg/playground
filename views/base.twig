{% import 'partials/macros.twig' as macro %}
<!DOCTYPE html>
<!--[if lte IE 9]><html class="no-js legacy" {{ site.language_attributes }}><![endif]-->
<!--[if gt IE 9]><!--><html class="no-js" {{ site.language_attributes }}><!--<![endif]-->
<head>
    {# wp_title is added by filter in wp_head (by Yoast SEO) #}
    {# head throws a warning above (in PhpStorm, for missing title #}
    <meta charset="{{ site.charset }}" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;1,300;1,400;1,500&display=swap">
    {{ wp_head }}
</head>
<body class="{{ body_class }}" itemscope itemtype="//schema.org/WebPage">
    {% include 'partials/topmenu.twig' %}

    <main class="site__content">
        {% block base_content %}{% endblock %}

        {% include 'partials/footer.twig' %}
    </main>

    {{ wp_footer }}
    {% block scripts %}{% endblock %}
</body>
</html>
